@model App_Agenda_Fatec.Models.Role

@{

    ViewData["Title"] = "Edição de Cargo";

}

<section id="module-form">

    <h1> Edição de Cargo </h1>

    <form asp-action="Edit">

        <div asp-validation-summary="All" class="alert"></div>

        <input asp-for="Id" type="hidden"/>

        <label asp-for="Name">Nome:</label>
        <input asp-for="Name" type="text" id="nome" maxlength="255" autocomplete="off"/>
        <span asp-validation-for="Name" class="alert"></span>

        <input asp-for="Active" type="hidden"/>

        <div id="buttons">

            <a asp-action="Index"> Cancelar </a>
            <button type="reset"> Limpar </button>
            <button type="submit"> Salvar </button>

        </div>

    </form>

</section>

@section CSS {

    <link rel="stylesheet" type="text/css" href="~/css/Form.css" asp-append-version="true"/>

}

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}