@model App_Agenda_Fatec.Models.Item

@{

    ViewData["Title"] = "Remoção de Item";

}

<h1>Remoção de Item</h1>

<div>

    <h4>Item</h4>

    <hr />

    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Equipment.Name)
        </dd>

    </dl>
    
    <form asp-action="Remove">

        <input type="hidden" name="room_guid" value="@ViewBag.Room" />
        <input type="hidden" asp-for="Equipment_Guid" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-controller="Room" asp-action="Details">Back to List</a>

    </form>

</div>

@section CSS {

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>

}